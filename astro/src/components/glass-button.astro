---
import { cn } from "@/lib/utils";
import { cva, type VariantProps } from "class-variance-authority";

type Props = {
  className?: string;
  size?: VariantProps<typeof glassButtonVariants>["size"];
  children?: any;
  [key: string]: any;
};

const glassButtonVariants = cva(
  "focus-visible:border-ring focus-visible:ring-ring/50 inline-flex w-fit cursor-pointer items-center gap-1 border leading-none transition-colors outline-none hover:bg-gray-800 focus-visible:ring-1 select-none",
  {
    variants: {
      size: {
        default: "gap-2 p-2 [&>svg]:w-6",
        sm: "p-1.25 [&>svg]:w-4",
        lg: "p-4 select-text cursor-default",
      },
    },
    defaultVariants: {
      size: "default",
    },
  },
);

const { className, size, children, ...props } = Astro.props;

export type { Props as GlassButtonProps };
---

<div class={cn(glassButtonVariants({ size }), className)} {...props}>
  <slot />
</div>
